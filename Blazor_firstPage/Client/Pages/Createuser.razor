@page "/createUser"
@using Blazor_firstPage.Shared
@inject HttpClient Http

<h1>Create User</h1>

<form method="post">
    <div>
        <label for="Id">ID:</label>
        <input type="text" @bind="user.Id" />
    </div>

    <div>
        <label for="FirstName">First Name:</label>
        <input type="text" @bind="user.Name" />
    </div>

    <div>
        <label for="Email">Email:</label>
        <input type="text" @bind="user.Email" />
    </div>

    <div>
        <button type="submit">Create</button>
    </div>
</form>



@code {
    private User user = new User(); // Initialize an empty user object
    //private User user { get; set; }
    protected override async Task OnInitializedAsync()
    {
        // Send the user object to the server to create a new user
        user = await Http.GetFromJsonAsync<User>("CreateUser");
       
    }
}
